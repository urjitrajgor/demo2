<h1>Listing Books</h1>

<table>
  <tr>

    <th>Name</th>
    <th> </th>
    <th>Author name</th>
    <th> </th>
    <th>Subject</th>
    <th> </th>
    <th>Page</th>
    <th> </th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td> </td>
      <td><%= book.author.author_name %></td>
      <td> </td>
      <td><%= book.subject %></td>
      <td> </td>
      <td><%= book.pages %></td>
      <td> </td>
      <td><%= link_to 'Show', book %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

